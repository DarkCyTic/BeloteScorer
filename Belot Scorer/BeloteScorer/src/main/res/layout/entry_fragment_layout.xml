<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameActivityLinearLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background="@color/colorLightGrey"
    android:weightSum="1">

    <com.nikolaynikolov.app.belotScorer.game.gameComponents.InputField
        android:labelFor="@string/leftInputFieldCD"
        android:id="@+id/leftInputField"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="0.5dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.5"
        android:background="@color/colorWhite"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorLightBlue"
        android:textSize="40sp"
        android:maxLength="3"
        android:digits="0123456789."/>
    <com.nikolaynikolov.app.belotScorer.game.gameComponents.InputField
        android:labelFor="@string/rightInputFieldCD"
        android:id="@+id/rightInputField"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="1dp"
        android:layout_weight="0.5"
        android:background="@color/colorWhite"
        android:fontFamily="@font/roboto"
        android:inputType="number"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorLightBlue"
        android:textSize="40sp"
        android:maxLength="3"
        android:digits="0123456789."/>

</LinearLayout>